<package> netjukebox

<class> Utilisateur
<attributes>
id_utilisateur : String;
login : String;
nom : String;
prenom : String;
mail : String;
pwd : String;
pays : String;
droit : Permission;
etat : Boolean; --à revoir..
<operations>
connecter(login : String , pwd : String);
estconnecte(etat : Etat) : Boolean;
<endclass>

<class> Permission
<attributes>
id_perm : Integer;
lib_perm : String;
<endclass>

<class> Document
<attributes>
id_doc : String;
titre : String;
date_creation : String;
duree_source : String;
compositeur: String;
interprete : String;
contrat : Contrat;
langue : Langue;
genre : Genre;
etat : Boolean; --à revoir ...
<operations>
ajouterDocument (d : Document);
supprimerDocument (d : Document);
modifierDocument(d : Document);
enlecture(etat : Etat): Boolean;
estprogramme (etat : Etat) : Boolean;
<endclass>

<class> Contrat
<attributes>
id_contrat : Integer;
nom_contrat : String;
adr_contrat : String;
date_contrat : String;
duree_contrat : Integer; --exprimé en mois
<endclass>

<class> Langue
<attributes>
id_langue : Integer;
lib_langue : String;
<endclass>

<class> Genre
<attributes>
id_genre : Integer;
lib_genre : String;
<endclass>

<class> Etat
<attributes>
id_etat : String;
lib_etat : String;
<endclass>

<class> Journal
<attributes>
id_journal : Integer;
date_journal : String;
<endclass>

<class> Protocole
<attributes>
id_proto : Integer;
lib_proto : String;
detail_proto : String;
<endclass>

<class> Canal
<attributes>
id_canal : String;
nom_canal : String;
flux_max :Integer;
protocole : Protocole;
journal : Journal;
etat : Etat;
<endclass>

<class> Programme
<attributes>
id_prog : String;
titre_prog : String;
thematique : String;
etat : Boolean;--a revoir..
duree :Integer;--à revoir..
responsable : Utilisateur;
document : Document;
programme : Programme;
<operations>
diffuserProgramme(p : Programme);
<endclass>

<class> Contractant
<attributes>
id_contrat : Integer;
nom_contrat : String;
adr_contrat :String;
date_contrat : String;
duree_contrat : Integer; -- exprimé en mois
document : Document;
<endclass>

<class> Systeme
<operations>
deconnecter(u : Utilisateur);
supprimerUtilisateur(u : Utilisateur);
creerUtilisateur(u : Utilisateur);
<endclass>

<associationclass> Diffusion
Programme.estdiffuse[0..*]<->Canal.diffuse[0..*]
<attributes>
calage_temporel : Integer ;
journal : Journal;
<endassociationclass>

<associations>
Utilisateur.possede[1]<->Permission.estattribue[0..*];
Utilisateur.gere[0..*]<->Canal.estgere[1];
Utilisateur.estresponsable[0..*]<->Programme.sousreponsabilite[1];
Document.estqualifie[1]<->Etat.qualifie[0..*];
Document.estqualifie[1]<->Genre.qualifie[0..*];
Document.estqualifie[1]<->Langue.qualifie[0..*];
Document.estsouscontrat[1]<->Contractant.contracte[0..*];
Programme.estcompose[0..*]<->Document.compose[0..*];
Programme.estcompose[0..*]<->Programme.compose[0..*];
Programme.estqualifie[1]<->Etat.qualifie[0..*];
Canal.utilise[1]<->Protocole.estutilise[0..*];
Canal.estjournalise[1]<->Journal.journalise[0..*];
Canal.estqualifie[1]<->Etat.qualifie[0..*];

<endpackage>



